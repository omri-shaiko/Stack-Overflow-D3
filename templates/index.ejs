<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>StackOverflow D3</title>
  <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body ng-app="stackD3">

<div class="container" ng-controller="UsersCtrl" ng-cloak>
  <header>
    <h3 class="text-muted">StackOverflow D3</h3>
  </header>

  <div class="jumbotron">
    <h1>StackOverflow D3</h1>


    <form class="form-inline" ng-submit="searchUser(userName)">
      <div class="form-group">
        <input type="text" class="form-control" ng-model="userName" placeholder="Please enter user name" />
      </div>
      <button type="submit" class="btn btn-default">Search User</button>
    </form>

    <article ng-show="user">
      <section class="well">
        <div class="row">
          <div class="col-md-4">
            <div><h3>{{user.display_name}}</h3></div>
            <div><img src="{{user.profile_image}}" alt="Profile Image"/></div>
          </div>
          <div class="col-md-8">
            <div id="d3-container"></div>
          </div>
        </div>
      </section>
    </article>
  </div>

</div> <!-- /container -->

<script src="bower_components/lodash/lodash.min.js"></script>
<script src="bower_components/angularjs/angular.min.js"></script>
<script src="bower_components/d3/d3.min.js"></script>
<script src="app.js"></script>
<script src="d3.js"></script>

</body>
</html>
